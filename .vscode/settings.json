{
    "python.pythonPath": "venv/bin/python",
    "python.linting.pylintPath": "/venv/bin/pylint",
    "python.envFile": "venv",
    "explorer.autoReveal": false,
    "workbench.editor.enablePreview": false,
    "autoDocstring.docstringFormat": "sphinx",
    "editor.rulers": [90],
    "workbench.colorCustomizations": {
        "editorRuler.foreground": "#f7e8ed"
    },
    "python.autoComplete.addBrackets": true, // autocomplete brakets
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true, 
    "python.languageServer": "Microsoft", //"Microsoft",Jedi, Pylance
    "python.analysis.autoSearchPaths": false,
    "python.linting.pylintArgs": [
        "--load-plugins",
    ],
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": [
        "--max-line-length=90"
    ],
    "jupyter.jupyterServerType": "remote",
    //"python.autoComplete.extraPaths": ["./src"], // to pylint read src imports,
    //"python.analysis.extraPaths": ["src"],
    //"python.analysis.completeFunctionParens": true,
    //"python.terminal.activateEnvironment": true,
    //"python.terminal.activateEnvInCurrentTerminal": true
    //"notebook.showCellStatusBar": true
}