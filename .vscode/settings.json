{
  
    // Python env
    "python.envFile": ".env",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.defaultInterpreterPath": "venv/bin/python3",
  
    // Editor settings
    "explorer.autoReveal": false,
    "workbench.editor.enablePreview": false,
    "autoDocstring.docstringFormat": "sphinx",
    "editor.rulers": [90],
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "editor.semanticHighlighting.enabled": false,
    "files.exclude": {
      ".ruff_cache": true,
      ".mypy_cache": true,
      "temp": true,
    },
  
    // Linters
    "mypy.runUsingActiveInterpreter": true,
    "mypy.configFile": "pyproject.toml",
  
    // Auto-save formatters
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.formatOnSave": true,
  
    // Project settings
    "python.autoComplete.extraPaths": ["."],
    "python.analysis.extraPaths": ["."],
  
    // Git
    "git.inputValidationSubjectLength": 72,
  
    // Gitmoji
    "gitmoji.onlyUseCustomEmoji": true,
    "gitmoji.addCustomEmoji": [
        {"emoji": "üêõ fix:", "description": "Bug fix"},
        {"emoji": "‚ú® feat:", "description": "New feature"},
        {"emoji": "üîß chore:", "description": "No production change"},
        {"emoji": "üë∑ ci:", "description": "CI changes"},
        {"emoji": "üìù docs:", "description": "Documentation changes"},
        {"emoji": "üì¶ build:", "description": "Build system or external dependencies changes"},
        {"emoji": "üßë‚Äçüé® style:", "description": "Changes that do not affect the meaning of the code"},
        {"emoji": "‚ôªÔ∏è refactor:", "description": "Changes that neither fixes bugs nor add features"},
        {"emoji": "‚ö° perf:", "description": "Changes that improves performance"},
        {"emoji": "‚úÖ test:", "description": "Changes or test additions"}
    ],
    
    // Jupyter
    "jupyter.jupyterServerType": "remote",
    "notebook.showCellStatusBar": "hidden",

}
